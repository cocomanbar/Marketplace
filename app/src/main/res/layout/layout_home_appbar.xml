<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/colorPrimary"
    android:gravity="center_vertical">

    <!--
    HomePage导航栏
    左边日历图标
    中间tabLayout
    右边搜索图标
    -->
    <ImageView
        android:id="@+id/ivCalender"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="start"
        android:padding="10dp"
        android:src="@drawable/ic_calendar_black_19dp"
        tools:ignore="ContentDescription" />

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/tabLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        app:tl_iconVisible="false"
        app:tl_indicator_bounce_enable="false"
        app:tl_indicator_color="@color/colorTextPrimary"
        app:tl_indicator_height="3dp"
        app:tl_indicator_margin_bottom="3dp"
        app:tl_indicator_width="10dp"
        app:tl_tab_width="66dp"
        app:tl_textBold="BOTH"
        app:tl_textSelectColor="@color/colorTextPrimary"
        app:tl_textUnselectColor="@color/colorTextSecondary"
        app:tl_textsize="12sp" />

    <ImageView
        android:id="@+id/ivSearch"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="end"
        android:padding="10dp"
        android:src="@drawable/ic_search_black_17dp"
        tools:ignore="ContentDescription" />

</FrameLayout>