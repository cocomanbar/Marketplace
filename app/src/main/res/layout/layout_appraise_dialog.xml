<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_dialog_radius_white_6dp_bg"
    android:orientation="vertical">

    <cn.mama.marketplace.ui.common.view.TypefaceTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="@string/encourage_title"
        android:textColor="@color/colorTextPrimary"
        android:textSize="12sp"
        app:typeface="fzlLTypeface" />

    <cn.mama.marketplace.ui.common.view.TypefaceTextView
        android:id="@+id/tvEncourageMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.3"
        android:paddingHorizontal="16dp"
        android:text="@string/encourage_message"
        android:textColor="@color/colorTextSecondary"
        android:textSize="11sp"
        app:typeface="fzlLTypeface" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="18dp"
        android:background="#a0a0a0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <cn.mama.marketplace.ui.common.view.TypefaceTextView
            android:id="@+id/tvPositiveButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/encourage_positive_text"
            android:textAlignment="center"
            android:textSize="12sp"
            app:typeface="fzlLTypeface" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginVertical="10dp"
            android:background="#a0a0a0" />

        <cn.mama.marketplace.ui.common.view.TypefaceTextView
            android:id="@+id/tvNegativeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/encourage_negative_text"
            android:textAlignment="center"
            android:textSize="12sp"
            app:typeface="fzlLTypeface" />
    </LinearLayout>
</LinearLayout>