<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SplashActivity">

    <ImageView
        android:id="@+id/ivSplashBmg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bg_splash"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/ivSlogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        android:src="@drawable/ic_logo_slogan"
        tools:ignore="ContentDescription" />

    <cn.mama.marketplace.ui.common.view.TypefaceTextView
        android:id="@+id/tvDescriptionCN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="49dp"
        android:text="@string/slogan_description_cn"
        android:textColor="@color/whiteAlpha20"
        android:textSize="13sp"
        app:typeface="fzlLTypeface" />

    <cn.mama.marketplace.ui.common.view.TypefaceTextView
        android:id="@+id/tvDescriptionUS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvDescriptionCN"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="@string/slogan_description_us"
        android:textColor="@color/whiteAlpha20"
        android:textSize="13sp"
        app:typeface="lobsterTypeface" />

</RelativeLayout>