<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="Marketplace" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <!--启动屏主题-->
    <style name="Marketplace.SplashActivity">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- windowAnimationStyle  -->
    <style name="Marketplace.BottomToTopSlide">
        <item name="android:windowAnimationStyle">@style/SlideAnimationBottomToTop</item>
    </style>

    <!--  SlideAnimation动画BottomToTop  -->
    <style name="SlideAnimationBottomToTop" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">
            @anim/slide_bottom_to_top_show
        </item>
        <item name="android:activityOpenExitAnimation">
            @anim/slide_bottom_to_top_dismiss
        </item>
        <item name="android:activityCloseEnterAnimation">
            @anim/slide_bottom_to_top_show
        </item>
        <item name="android:activityCloseExitAnimation">
            @anim/slide_bottom_to_top_dismiss
        </item>
    </style>

    <!-- 鼓励弹窗主题 -->
    <style name="MarketplaceAlertDialogStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <!--  状态页 加载圈  -->
    <style name="StateLoadingBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:indeterminateTint">@color/blue</item>
    </style>

</resources>